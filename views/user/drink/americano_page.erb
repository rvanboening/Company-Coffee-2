<div class="container">
    <header class="main-header">
        <h1>How would you like your Americano?</h2>
    </header>
<hr>

    <div class="main-content">
        <form action="/success">
            <form>
            <input type="hidden" name="drink" value="Americano">
            <input type="hidden" name="user_id" value="<%=@user_id%>">
            <input type="hidden" name="order_made" value="Order">
   
            <h3> Regular or Decaf </h3>
            <input type="radio" name="reg_decaf" value="Regular" checked>Regular
            <br>
            <input type="radio" name="reg_decaf" value="Decaf">Decaf
            <br>
            <br>
            <h3> Size </h3>
            <input type="radio" name="size" value="Small" checked>Small
            <br>
            <input type="radio" name="size" value="Medium">Medium
            <br>
            <input type="radio" name="size" value="Large">Large
            <br>
            <br>
            <h3> Cream or Sugar </h3>
            <input type="radio" name="cream" value="Cream">Cream
            <input type="radio" name="sugar" value="Sugar">Sugar
            <br>
            <br>
            <input type = "Submit" class="button" value="Submit">
        </form>
    </div>
</div>